<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFBB"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="=점수판="
        android:textSize="30sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5A5A5A"
        android:gravity="center"
        android:text="RESET"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noneScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="아직 저장된 점수가 없습니다."
        android:textSize="25dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_score"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="1등 :  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이름"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score1"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="점수"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_second"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="2등 :  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이름"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score2"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="점수"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_third"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="3등 :  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이름"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score3"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="점수"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_fourth"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="4등 :  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name4"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이름"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score4"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="점수"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_fifth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_fifth"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="5등 :  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name5"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이름"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score5"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="점수"
            android:textSize="30sp" />
    </LinearLayout>



</LinearLayout>
